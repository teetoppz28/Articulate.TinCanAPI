<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-cascade="all" package="org.sakaiproject.articulate.tincan.model.hibernate" default-lazy="false">

    <class name="org.sakaiproject.articulate.tincan.model.hibernate.ArticulateTCAttempt" table="ARTICULATE_TC_ATTEMPT">
        <id name="id" column="ID" type="long">
            <generator class="native">
                <param name="sequence">ARTICULATE_TC_ATTEMPT_UID_S</param>
            </generator>
        </id>
        <property name="contentPackageId" column="CONTENT_PACKAGE_ID" />
        <property name="courseId" column="COURSE_ID" />
        <property name="learnerId" column="LEARNER_ID" />
        <property name="attemptNumber" column="ATTEMPT_NUMBER" />
        <property name="beginDate" column="CREATED_ON" />
        <property name="lastModifiedDate" column="MODIFIED_ON" />
    </class>

</hibernate-mapping>