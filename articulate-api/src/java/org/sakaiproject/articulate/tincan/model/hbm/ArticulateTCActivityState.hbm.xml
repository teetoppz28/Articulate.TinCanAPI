<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-cascade="all" package="org.sakaiproject.articulate.tincan.model.hibernate" default-lazy="false">

    <class name="org.sakaiproject.articulate.tincan.model.hibernate.ArticulateTCActivityState" table="ARTICULATE_TC_ACTIVITY_STATE">
        <id name="id" column="ID" type="long">
            <generator class="increment"/>
        </id>
        <properties name="activity_state_unique" unique="true">
            <property name="attemptId" column="ATTEMPT_ID" />
        </properties>
        <property name="content" column="CONTENT" type="text" />
        <property name="stateId" column="STATE_ID" />
        <property name="modified" column="MODIFIED" />
    </class>

</hibernate-mapping>
