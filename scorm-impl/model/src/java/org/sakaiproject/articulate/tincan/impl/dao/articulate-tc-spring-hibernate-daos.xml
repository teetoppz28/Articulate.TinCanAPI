<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="articulateTCActivityStateDao" class="org.sakaiproject.articulate.tincan.impl.dao.ArticulateTCActivityStateDaoImpl">
        <property name="sessionFactory">
            <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
        </property>
    </bean>

    <bean id="org.sakaiproject.articulate.tincan.api.dao.ArticulateTCActivityStateDao" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager" ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
        <property name="target" ref="articulateTCActivityStateDao" />
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

</beans>
