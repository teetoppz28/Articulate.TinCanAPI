<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- Activity State -->

    <bean id="articulateTCActivityStateDao" class="org.sakaiproject.articulate.tincan.impl.dao.ArticulateTCActivityStateDaoImpl">
        <property name="sessionFactory">
            <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
        </property>
    </bean>

    <bean id="org.sakaiproject.articulate.tincan.api.dao.ArticulateTCActivityStateDao" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager" ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
        <property name="target" ref="articulateTCActivityStateDao" />
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <!--  Attempt -->

    <bean id="articulateTCAttemptDao" class="org.sakaiproject.articulate.tincan.impl.dao.ArticulateTCAttemptDaoImpl">
        <property name="sessionFactory">
            <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
        </property>
    </bean>

    <bean id="org.sakaiproject.articulate.tincan.api.dao.ArticulateTCAttemptDao" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager" ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
        <property name="target" ref="articulateTCAttemptDao" />
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <!--  Attempt Result -->

    <bean id="articulateTCAttemptResultDao" class="org.sakaiproject.articulate.tincan.impl.dao.ArticulateTCAttemptResultDaoImpl">
        <property name="sessionFactory">
            <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
        </property>
    </bean>

    <bean id="org.sakaiproject.articulate.tincan.api.dao.ArticulateTCAttemptResultDao" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager" ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
        <property name="target" ref="articulateTCAttemptResultDao" />
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <!--  Content Package -->

    <bean id="articulateTCContentPackageDao" class="org.sakaiproject.articulate.tincan.impl.dao.ArticulateTCContentPackageDaoImpl">
        <property name="sessionFactory">
            <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
        </property>
    </bean>

    <bean id="org.sakaiproject.articulate.tincan.api.dao.ArticulateTCContentPackageDao" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager" ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
        <property name="target" ref="articulateTCContentPackageDao" />
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

</beans>
