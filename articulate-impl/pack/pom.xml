<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.sakaiproject</groupId>
        <artifactId>sakai-scorm-base</artifactId>
        <version>10-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <name>sakai-articulate-pack</name>
    <groupId>org.sakaiproject.articulate</groupId>
    <artifactId>sakai-articulate-pack</artifactId>
    <packaging>sakai-component</packaging>
    <description>This project packs the components used by the Sakai Articulate Tool</description>
    <organization>
        <name>Sakai Project</name>
        <url>http://sakaiproject.org/</url>
    </organization>
    <inceptionYear>2007</inceptionYear>

    <properties>
        <deploy.target>components</deploy.target>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.sakaiproject.articulate</groupId>
            <artifactId>sakai-articulate-model-impl</artifactId>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.articulate</groupId>
            <artifactId>sakai-articulate-service-impl</artifactId>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.scorm</groupId>
            <artifactId>sakai-scorm-adl-impl</artifactId>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.scorm</groupId>
            <artifactId>sakai-scorm-content-impl</artifactId>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.scorm</groupId>
            <artifactId>sakai-scorm-client-impl</artifactId>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.scorm</groupId>
            <artifactId>sakai-scorm-model-impl</artifactId>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.scorm</groupId>
            <artifactId>sakai-scorm-service-impl</artifactId>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <type>jar</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>xalan</groupId>
            <artifactId>xalan</artifactId>
            <type>jar</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xmlParserAPIs</artifactId>
            <type>jar</type>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>check-file-header</goal>
                        </goals>
                        <phase>process-sources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
