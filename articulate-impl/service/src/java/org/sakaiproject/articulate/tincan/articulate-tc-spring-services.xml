<beans>

    <!--  Package Importer -->

    <bean id="articulateTCImporterService" class="org.sakaiproject.articulate.tincan.impl.ArticulateTCImporterServiceImpl">
        <property name="articulateTCContentEntityUtils" ref="articulateTCContentEntityUtils" />
        <property name="articulateTCContentPackageDao" ref="articulateTCContentPackageDao" />
        <property name="articulateTCDocumentUtils" ref="articulateTCDocumentUtils" />
        <property name="contentHostingService" ref="org.sakaiproject.content.api.ContentHostingService" />
        <property name="developerHelperService" ref="org.sakaiproject.entitybroker.DeveloperHelperService" />
    </bean>

    <bean id="articulateTCContentEntityUtils" class="org.sakaiproject.articulate.tincan.util.ArticulateTCContentEntityUtils">
        <property name="contentHostingService" ref="org.sakaiproject.content.api.ContentHostingService" />
    </bean>

    <bean id="articulateTCDocumentUtils" class="org.sakaiproject.articulate.tincan.util.ArticulateTCDocumentUtils">
        <property name="contentHostingService" ref="org.sakaiproject.content.api.ContentHostingService" />
    </bean>

    <!-- Package deletion -->

    <bean id="articulateTCDeleteService" class="org.sakaiproject.articulate.tincan.impl.ArticulateTCDeleteServiceImpl">
        <property name="articulateTCContentEntityUtils" ref="articulateTCContentEntityUtils" />
        <property name="articulateTCContentPackageDao" ref="articulateTCContentPackageDao" />
        <property name="contentHostingService" ref="org.sakaiproject.content.api.ContentHostingService" />
        <property name="developerHelperService" ref="org.sakaiproject.entitybroker.DeveloperHelperService" />
        <property name="gradebookService" ref="org.sakaiproject.service.gradebook.GradebookService" />
    </bean>

    <!--  Launch service -->

    <bean id="articulateTCLaunchService" class="org.sakaiproject.articulate.tincan.impl.ArticulateTCLaunchServiceImpl">
        <property name="articulateTCAttemptDao" ref="articulateTCAttemptDao" />
        <property name="articulateTCAttemptResultDao" ref="articulateTCAttemptResultDao" />
        <property name="articulateTCContentPackageDao" ref="articulateTCContentPackageDao" />
        <property name="userDirectoryService" ref="org.sakaiproject.user.api.UserDirectoryService" />
    </bean>

    <!--  Entity Provider -->

    <bean parent="org.sakaiproject.entitybroker.entityprovider.AbstractEntityProvider" class="org.sakaiproject.articulate.tincan.entity.ArticulateTCEntityProvider">
        <property name="articulateTCEntityProviderService" ref="articulateTCEntityProviderService" />
    </bean>

    <bean id="articulateTCEntityProviderService" class="org.sakaiproject.articulate.tincan.impl.ArticulateTCEntityProviderServiceImpl" init-method="init">
        <property name="articulateTCActivityStateDao" ref="articulateTCActivityStateDao" />
        <property name="articulateTCAttemptDao" ref="articulateTCAttemptDao" />
        <property name="articulateTCAttemptResultDao" ref="articulateTCAttemptResultDao" />
        <property name="articulateTCContentPackageDao" ref="articulateTCContentPackageDao" />
        <property name="articulateTCEntityProviderServiceUtils" ref="articulateTCEntityProviderServiceUtils" />
        <property name="developerHelperService" ref="org.sakaiproject.entitybroker.DeveloperHelperService" />
        <property name="siteService" ref="org.sakaiproject.site.api.SiteService" />
    </bean>

    <bean id="articulateTCEntityProviderServiceUtils" class="org.sakaiproject.articulate.tincan.util.ArticulateTCEntityProviderServiceUtils">
        <property name="articulateTCContentPackageDao" ref="articulateTCContentPackageDao" />
        <property name="developerHelperService" ref="org.sakaiproject.entitybroker.DeveloperHelperService" />
    </bean>

</beans>